<body>

<div id="main-container">
    <div id="user-form-container">
        <form method="POST">
            <div class="user-form">
                <input type="text" name="fundraising-name" id="fundraising-name" placeholder="name" maxlength="23"
                       pattern="^[a-zA-Z\s]+$" title="Should contains only letters" required>
            </div>

            <div class="dropdown">
                <select name="artifact-name" id="artifact-name" required>
                    <option value="" disabled selected>artifact</option>
                    {% for artifact in allArtifacts %}
                        {% if artifact.type == "group" %}
                            <option value="{{ artifact.name }}">{{ artifact.name }}</option>
                        {% endif %}
                    {% endfor %}
                </select>
            </div>

            <div id="user-form-button">
                <input type="submit" value="CREATE TEAM">
            </div>
        </form>
    </div>
</div>
</body>