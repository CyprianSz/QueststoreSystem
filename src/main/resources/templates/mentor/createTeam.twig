<body>

<div id="main-container">
    <div id="user-form-container">
        <form method="POST">
            <div class="user-form">
                <input type="text" name="team-name" id="team-name" placeholder="team name" maxlength="23"
                       pattern="^[a-zA-Z\s]+$" title="Should contains only letters" required>
            </div>

            <div class="dropdown">
                <select name="group-name" id=group-name" required>
                    <option value="" disabled selected>group</option>
                    {% for group in allGroups %}
                        <option value="{{ group.name }}">{{ group.name }}</option>
                    {% endfor %}
                </select>
            </div>

            <div id="user-form-button">
                <input type="submit" value="CREATE TEAM">
            </div>
        </form>
    </div>
</div>
</body>