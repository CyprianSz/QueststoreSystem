<div id="main-container-edit">

    <div id="vertical_menu">
        <div id="vertical-radio-list">
            <form>
                <div id="radio-form">
                    {%  for codecooler in allCodecoolers %}
                        <a href="/codecooler/edit?codecooler-id={{ codecooler.ID }}">
                            <button name="codecooler-id" value="{{ codecooler.ID }}">
                                {{ codecooler.firstName }} {{ codecooler.lastName }}
                            </button>
                        </a>
                    {% endfor %}
                </div>
            </form>
        </div>
    </div>

    <div id="sub-container-form">
        <div id="user-form-container">
            <form method="POST">
                <div class="user-form">
                    <label for="first-name">first name</label>
                    <input type="text" name="first-name" id="first-name" value="{{ firstName }}" required>
                </div>

                <div class="user-form">
                    <label for="last-name">last name</label>
                    <input type="text" name="last-name" id="last-name" value="{{ lastName }}" required>
                </div>

                <div class="user-form">
                    <label for="email">email</label>
                    <input type="text" name="email" id="email" value="{{ email }}" required
                           pattern="^([_a-zA-Z0-9-]+(\.[_a-zA-Z0-9-]+)*@[a-zA-Z0-9-](\.[a-zA-Z0-9-]+)*(\.[a-zA-Z]{1,6}))?$">
                </div>

                <div class="user-form">
                    <label for="date-of-birth">date of birth</label>
                    <input type="text" name="date-of-birth" id="date-of-birth" value="{{ dateOfBirth }}" required
                           pattern="^[12][09]\d{2}-(0[1-9]|1[0-2])-(0[1-9]|[12]\d|3[01])$"
                           title="YYYY-MM-DD">
                </div>

                <div class="dropdown">
                    <label for="group">group</label>
                    <input type="text" name="group" id="group" list="groups" value="{{ groupName }}">
                    <datalist id="groups">
                        {% for group in allGroups %}
                            <option value="{{ group.name }}"></option>
                        {% endfor %}
                    </datalist>
                </div>

                <div class="dropdown">
                    <label for="team">team</label>
                    <input type="text" name="team" id="team" list="teams" value="{{ teamName }}">
                    <datalist id="teams">
                        {% for team in allTeams %}
                            <option value="{{ team.name }}"></option>
                        {% endfor %}
                    </datalist>
                </div>

                <div id="user-form-button">
                    <input type="submit" value="SAVE CHANGES">
                </div>
            </form>
        </div>
    </div>
</div>
