
<div id="main-container-edit">

    <div id="vertical_menu">
        <div id="vertical-radio-list">
            <form>
                <div id="radio-form">
                    {%  for level in allLevels %}
                        <a href="/level/edit?level-id={{ level.ID }}">
                        <button name="level-id" value="{{ level.ID }}">Level {{ level.rank }} {{ level.requiredExperience }}xp</button>
                        </a>
                    {% endfor %}
                </div>
            </form>
        </div>
    </div>

    <div id="sub-container-form">

        <div id="user-form-container">
            <form method="POST">
                <div class="user-form">
                    <label for="rank">rank</label>
                    <input type="text" name="rank" id="rank" value="{{ rank }}" required
                           pattern="^[0-9]+$" title="It's not a digit">
                </div>

                <div class="user-form">
                    <label for="required-experience">exp required</label>
                    <input type="text" name="required-experience" id="required-experience" value="{{ requiredExperience }}" required
                           pattern="^[0-9]+$" title="It's not a positive number">
                </div>

                <div class="user-form">
                    <label for="description">description</label>
                    <textarea rows="4" name="description" id="description" required>{{ description }}</textarea>
                </div>

                <div id="user-form-button">
                    <input type="submit" value="SAVE CHANGES">
                </div>
            </form>
        </div>
    </div>
</div>