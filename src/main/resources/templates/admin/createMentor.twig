<div id="main-container">
    <div id="user-form-container">
        <form method="POST">
            <div class="user-form">
                <input type="text" name="first-name" id="first-name" placeholder="first name" maxlength="15" required>
            </div>

            <div class="user-form">
                <input type="text" name="last-name" id="last-name" placeholder="last name" maxlength="20" required>
            </div>

            <div class="user-form">
                <input type="text" name="date-of-birth" id="date-of-birth" placeholder="date of birth" required
                       title="MM-DD-YYYY" onfocus="(this.type='date')" onblur="(this.type='text')"
                       pattern="(?:19|20)[0-9]{2}-(?:(?:0[1-9]|1[0-2])-(?:0[1-9]|1[0-9]|2[0-9])|(?:(?!02)(?:0[1-9]|1[0-2])-(?:30))|(?:(?:0[13578]|1[02])-31))">
            </div>

            <div class="user-form">
                <input type="text" name="email" id="email" placeholder="email" maxlength=40" required
                       pattern="^[^@]+@[^@]+\.[a-zA-Z]{2,}$">
            </div>

            <div class="dropdown">
                <select name="group" id=group" required>
                    <option value="" disabled selected>group</option>
                    {% for group in allGroups %}
                        <option value="{{ group.name }}">{{ group.name }}</option>
                    {% endfor %}
                </select>
            </div>

            <div id="user-form-button">
                <input type="submit" value="CREATE MENTOR">
            </div>
        </form>
    </div>
</div>