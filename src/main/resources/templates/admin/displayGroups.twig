<div id="main-container">

    <div id="groupsList">
        <table class="table">
            <thead>
            <tr>
                <th>group name</th>
                <th>members</th>
            </tr>
            </thead>
            <tbody>
                {% for groupMembers in groupedCodecoolers %}
                <tr>
                    <td>
                        {{ groupMembers[0].group.name }}
                    </td>
                    <td>
                        <div class="dropdown">
                            <select name="group" id=group">
                                {% for member in groupMembers %}
                                    <option disabled>{{ member.firstName }} {{ member.lastName }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
