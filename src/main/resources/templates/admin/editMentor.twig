
<div id="main-container-edit">

    <div id="vertical_menu">
        <div id="vertical-radio-list">
            <script src="../../static/js/filteringScript.js"></script>
            <input type="text" id="searching" onkeyup="filterList()" placeholder="Search">
            <form>
                <div id="radio-form">
                    <ul id="radio-form-ul">
                    {%  for mentor in allMentors %}
                        <li>
                        <a href="/mentor/edit?mentor-id={{ mentor.ID }}">
                        <button name="mentor-id" value="{{ mentor.ID }}">{{ mentor.firstName }} {{ mentor.lastName }}</button>
                        </a>
                        </li>
                    {% endfor %}
                    </ul>
                </div>
            </form>
        </div>
    </div>

    <div id="sub-container-form">

        <div id="user-form-container">
            <form method="POST">
                <div class="user-form">
                    <label for="first-name">first name</label>
                    <input type="text" name="first-name" id="first-name" value="{{ firstName }}" maxlength="15"
                           pattern="^[a-zA-Z\s]+$" title="Should contains only letters" required>
                </div>

                <div class="user-form">
                    <label for="last-name">last name</label>
                    <input type="text" name="last-name" id="last-name" value="{{ lastName }}" maxlength="20"
                           pattern="^[a-zA-Z\s]+$" title="Should contains only letters" required>
                </div>

                <div class="user-form">
                    <label for="email">email</label>
                    <input type="text" name="email" id="email" value="{{ email }}" maxlength="40" required
                           pattern="^([^@]+@[^@]+\.[a-zA-Z]{2,}$">
                </div>

                <div class="user-form">
                    <label for="date-of-birth">date of birth</label>
                    <input type="text" name="date-of-birth" id="date-of-birth" placeholder="" value="{{ dateOfBirth }}"
                           required title="MM-DD-YYYY" onfocus="(this.type='date')" onblur="(this.type='text')"
                           pattern="(?:19|20)[0-9]{2}-(?:(?:0[1-9]|1[0-2])-(?:0[1-9]|1[0-9]|2[0-9])|(?:(?!02)(?:0[1-9]|1[0-2])-(?:30))|(?:(?:0[13578]|1[02])-31))">
                </div>

                <div class="dropdown">
                    <label for="group">group</label>
                    <select name="group" id=group" required>
                        <option value="{{ groupName }}">{{ groupName }}</option>
                        {% for group in allGroups %}
                            <option value="{{ group.name }}">{{ group.name }}</option>
                        {% endfor %}
                    </select>
                </div>

                <div id="user-form-button">
                    <input type="submit" value="SAVE CHANGES">
                </div>
            </form>
        </div>
    </div>
</div>
